# Frontend Environment Variables (VITE_* prefix for client-side)
VITE_APP_ENV=development
VITE_API_URL=http://localhost:4000/api/v1
VITE_TENANT_ID=demo-instance
VITE_TENANT_NAME=OwnCent Demo Instance
VITE_TENANT_CONFIRMATION_TOKEN=owncent-demo

VITE_ENABLE_BANK_INTEGRATION=false
VITE_ENABLE_PREMIUM_FEATURES=true
VITE_ENABLE_ANALYTICS=false

# Backend/Server Environment Variables
NODE_ENV=development
PORT=4000
CORS_ORIGINS=http://localhost:5173,http://localhost:4173

# Database Configuration (MariaDB)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=owncent
DB_USER=owncent_app
DB_PASSWORD=your_secure_password_here
DB_POOL_MAX=10

# JWT Configuration
JWT_ACCESS_SECRET=change-this-in-production-use-long-random-string
JWT_REFRESH_SECRET=change-this-refresh-secret-use-different-long-random-string
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d

# Security Configuration
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# Rate Limiting (requests per minute by tier)
RATE_LIMIT_FREE=30
RATE_LIMIT_ADVANCED=90
RATE_LIMIT_PREMIUM=180
RATE_LIMIT_FAMILY=180

# Logging
LOG_LEVEL=info
