# OwnCent Unified Application Configuration
# Copy this file to .env and update with your production values

# Backend/Server Environment Variables
NODE_ENV=development
PORT=3000

# CORS Configuration
# Note: With unified deployment, CORS is less critical since frontend and API are same-origin
# But keeping for flexibility if API needs to be accessed from other domains
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Database Configuration (MariaDB)
DB_HOST=maria.alfcent.com
DB_PORT=3306
DB_DATABASE=owncent
DB_USER=owncent_user
DB_PASSWORD=your_secure_password_here
DB_POOL_MAX=10

# JWT Configuration
JWT_ACCESS_SECRET=change-this-in-production-use-long-random-string
JWT_REFRESH_SECRET=change-this-refresh-secret-use-different-long-random-string
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d

# Security Configuration
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# Rate Limiting (requests per minute by tier)
RATE_LIMIT_FREE=30
RATE_LIMIT_ADVANCED=90
RATE_LIMIT_PREMIUM=180
RATE_LIMIT_FAMILY=180

# Logging
LOG_LEVEL=info
